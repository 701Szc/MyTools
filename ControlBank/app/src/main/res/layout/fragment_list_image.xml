<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="2">
    <GridLayout
        android:id="@+id/image_grid"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:rowCount="3"
        android:columnCount="2"
        >
    <RelativeLayout
        android:layout_rowWeight="1"
        android:layout_columnWeight="1">
        <ImageView
            android:id="@+id/grid1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/loading_data_anim"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_rowWeight="1"
        android:layout_columnWeight="1">
        <ImageView
            android:id="@+id/grid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_rowWeight="1"
        android:layout_columnWeight="1">
        <ImageView
            android:id="@+id/grid3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_rowWeight="1"
        android:layout_columnWeight="1">
        <ImageView
            android:id="@+id/grid4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_rowWeight="1"
        android:layout_columnWeight="1">
        <ImageView
            android:id="@+id/grid5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_rowWeight="1"
        android:layout_columnWeight="1">
        <ImageView
            android:id="@+id/grid6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_grid">

        <Button
            android:id="@+id/image_previousPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="上一页"
            android:visibility="gone" />
        <TextView
            android:id="@+id/image_currentPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/image_nextPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="下一页" />

    </RelativeLayout>

</RelativeLayout>